#include <stdio.h>
#include <stdlib.h>


int fatorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    } else {
        return n * fatorial(n - 1);
    }
}

int main() {
    int num;

    printf("Digite um numero inteiro: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("Fatorial nÃ£o definido para numeros negativos.\n");
    } else {
        printf("Fatorial de %d = %d\n", num, fatorial(num));
    }

    return 0;
}
